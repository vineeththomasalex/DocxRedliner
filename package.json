{
  "name": "docredliner",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "deploy": "npm run build && npx gh-pages -d dist",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:unit": "vitest run tests/unit",
    "test:integration": "vitest run tests/integration",
    "test:ui": "vitest --ui",
    "generate:test-docs": "npx tsx tests/fixtures/synthetic/generator/create-test-docs.ts"
  },
  "dependencies": {
    "diff": "^5.1.0",
    "diff-match-patch": "^1.0.5",
    "docx": "^9.5.1",
    "officeparser": "^6.0.0"
  },
  "devDependencies": {
    "@types/diff": "^5.0.9",
    "@types/diff-match-patch": "^1.0.36",
    "@vitest/coverage-v8": "^4.0.18",
    "@vitest/ui": "^4.0.18",
    "happy-dom": "^20.5.0",
    "jsdom": "^27.0.1",
    "typescript": "^5.7.0",
    "vite": "^6.0.0",
    "vitest": "^4.0.18"
  }
}
